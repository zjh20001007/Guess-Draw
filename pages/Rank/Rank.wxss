page{
  background-color: #ADD8E6;
}

.body {
  display: flex;
  flex-direction: column;
  height: 100vh; /* vw */
}

.head, .bottom {
  background-color: #ddd;
}

.list-wrap {
  flex-grow: 1;
  position: relative;
}

.list {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.list-scroll-view {
  
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  margin-left: 2vw;
  margin-right: 2vw;
}


.course-card {
  width: 100vw; /** 47 * 2 = 94 **/
  margin-top: 10px;
  margin-bottom: 10px;
  /* margin: 10px; */
}

.course-card image {
  margin-left: 10px;
  width: 10%;
  border-radius: 5px;
}

.course-card .text {
  position: relative;
  bottom: 15px;
  left: 5px;
}

.course-card .grade {
  position: relative;
  top: 10px;
  float: right;
}

.price, .active {
  color: #23b8ff;
}

.guide {
  display: flex;
  justify-content: space-between;
}
.guide-item {
  text-align: center;
  font-size: 14px;
  width: 45px;
  line-height: 1;
  padding: 20px;
}

.guide-item image {
  width: 38px;
}