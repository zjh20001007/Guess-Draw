page {
  background-color: #ADD8E6;
}

.header {
  width: 100%;
  height: 100rpx;
  padding-left: 20rpx;
}

.header .topic {
  width: 92%;
  font-size: 22rpx;
  line-height: 40rpx;
  padding: 10rpx 0rpx;
  padding-left: 20rpx;
  position: relative;
}

.header .topic .topic-title {
  color: white;
  height: 40rpx;
}

.header .topic .tip {
  color: white;
  height: 40rpx;
}

.header .topic .eraser, .header .topic .clear {
  display: block;
  width: 92rpx;
  height: 80rpx;
  float: right;
}

.header .topic .eraser {
  margin-right: 10rpx;
}

.header .topic .icon {
  width: 32rpx;
  height: 32rpx;
  float: left;
}

.header .topic .eraser text,.header .topic .clear text {
  display: block;
  float: left;
  font-size: 24rpx;
  width: 60rpx;
  text-align: center;
}

.header .topic .refresh {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  right: 0;
  top: 0;
}

.header .topic .refresh image {
  margin-top: 32rpx;
  margin-left: 32rpx;
  width: 36rpx;
  height: 36rpx;
}

.content {
  width: 100%;
  overflow: hidden;
  margin: 0 auto;
  text-align: center;
  padding-top: 200rpx;
}

.content .canvas-area {
  margin: 10rpx 20rpx 20rpx 20rpx;
  background-color: #fff;
}

.content .canvas-area canvas {
  width: 710rpx;
  height: 710rpx;
}
