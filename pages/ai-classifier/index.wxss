page{
  height: 100%;
  width:100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 显示的题目 */

.container .question {
  width: 100%;
  height: 5%;
  background: #f0efef;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #000000;
  box-shadow: 2rpx 5rpx 2rpx silver;
}

/* 刷新按钮 */

.container .question .userinfo-avatar {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.container .question text {
  margin: auto 10rpx auto 20rpx;
  font-size: 0.75em;
}

.container .question .refresh-btn {
  width: 50rpx;
  height: 50rpx;
  transform: scaleX(-1);
}

/* 中间画板 */

.container .palette {
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 2rpx 5rpx 2rpx silver;
}

/* 按钮的panel */

.container .option-panel {
  padding-bottom: 10rpx;
  font-size: 1em;
  text-align: center;
  background: #f0efef;
  width: 100%;
  height: 45%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

/* 面板中的行 */

.option-panel .option-row {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
}

#firstRow{
  height: 10%;
}
#secondRow{
  height: 90%;
}


/* 面板中的第一行 */

.option-panel #firstRow .width-container {
  width: 50%;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

/* 笔触大小四个字 */
.option-panel #firstRow .width-container text {
  margin-left: 25rpx;
  font-size: 0.75em;
  color: gray;
}

.brush-point{
  width: 52rpx;
  height: 65rpx;
}

.option-panel #firstRow .useless {
  width: 30%;
}

/* 清除按钮 */
.option-panel #firstRow .icon-text {
  padding-top: 10rpx;
  width: 20%;
  display: flex;
  align-items: center;
  font-size: 0.75em;
  color: gray;
}

/* 第二行 */
.option-panel #secondRow {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 分类视图，包含名称和概率 */
.option-panel #secondRow .class-view {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 分类名称 */
.option-panel #secondRow .class-view .class-name {
  width: 100%;
  margin-left: 25rpx;
  font-size: 0.75em;
  color: gray;
  padding: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

/* 分类概率进度条 */
.option-panel #secondRow .class-view .class-prog {
  margin-left: 25rpx;
  width: 95%;
}

/*----------------------------------------------------------------------*/

canvas {
  background: black;
  width: 100%;
  height: 100%;
  border: 1rpx solid #ebebeb;
  border-radius: 3rpx;
}
