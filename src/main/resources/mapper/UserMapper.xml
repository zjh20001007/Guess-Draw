<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisplus.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.mybatisplus.model.domain.User">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="openid" property="openid" />
        <result column="pic_url" property="picUrl" />
        <result column="hig" property="hig" />
    </resultMap>
    <select id="getRank" resultMap="BaseResultMap">
        select * from user order by hig desc limit 100
    </select>
    <select id="getMyRank" resultType="integer">
        select count(*)+1 from user where hig > (select hig from user where id = #{userId})
    </select>
</mapper>
