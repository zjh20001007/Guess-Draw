<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisplus.mapper.MultiplayerDictionaryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.mybatisplus.model.domain.MultiplayerDictionary">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="prompt" property="prompt" />
    </resultMap>
    <select id="selectWord" resultMap="BaseResultMap">
        SELECT * FROM Multiplayer_dictionary
        <if test="list != null">
            where name not in
            <foreach collection="list" item="kk" open="(" separator="," close=")">
               #{kk}
            </foreach>
        </if>
        ORDER BY rand() LIMIT 8
    </select>

</mapper>
